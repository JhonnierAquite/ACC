<!DOCTYPE html>
<html>
<head>

    @model IEnumerable<CRUDACC.Models.Oferta>
    <link rel="stylesheet" href="~/css/CrearPDF.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>


<body>
<h1>Ofertas</h1>
    <div>
        <table class="table table-hover">
            <tr>
                <td> @Html.DisplayNameFor(m => m.Nombre) </td>
                <td> @Html.DisplayNameFor(m => m.Descripcion) </td>
                <td> @Html.DisplayNameFor(m => m.CantidadP) </td>

            </tr>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- <td> @item.Id </td>-->
                        <td> @item.Nombre </td>
                        <td> @item.Descripcion </td>
                        <td> @item.CantidadP </td>
                      
                    </tr>
                }
            </tbody>

        </table>
    </div>


</body>
</html>