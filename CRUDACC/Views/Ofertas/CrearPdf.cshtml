@model IEnumerable<CRUDACC.Models.Oferta>

@{
    ViewData["Title"] = "CrearPdf";
    //Layout = "~/Views/Shared/_Layout.cshtml";
     //Layout = null;

}

<h1>Ofertas</h1>


<div class="container">
  


    <div class="row">
        @if (Model.Count() > 0)
       {
           <table class="table table-bordered table-striped">
               <thead>
                    <tr>
                        <td> @Html.DisplayNameFor(m => m.Id) </td>
                        <td> @Html.DisplayNameFor(m => m.Nombre) </td>
                        <td> @Html.DisplayNameFor(m => m.Descripcion) </td>
                        <td> @Html.DisplayNameFor(m => m.CantidadP) </td>
                    </tr>
               </thead>
               <tbody>
                   @foreach (var item in Model)
                  {
                      <tr>
                        <td> @item.Id </td>
                        <td> @item.Nombre </td>
                        <td> @item.Descripcion </td>
                        <td> @item.CantidadP </td>
                        
                    </tr>
                  }
               </tbody>
           </table>
       }
       else
        {
            <p> No existe registro</p>
        }

    </div>
</div>


