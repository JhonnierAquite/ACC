<!DOCTYPE html>

<head>
    @model IEnumerable<CRUDACC.Models.Oferta>

    <link rel="stylesheet" href="~/css/CrearPDF.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Generated by https://smooth.ie/blogs/news/svg-wavey-transitions-between-sections -->

</head>

<body>



    <div class="titulopdf">

        <h3>Ofertas </h3>
    </div>


    <div class="row">
        @if (Model.Count() > 0)
        {

            <table class="table table-hover">
                <thead>
                    <tr>
                        <!-- <td> @Html.DisplayNameFor(m => m.Id) </td>-->
                        <td> @Html.DisplayNameFor(m => m.Nombre) </td>
                        <td> @Html.DisplayNameFor(m => m.Descripcion) </td>
                        <td> @Html.DisplayNameFor(m => m.CantidadP) </td>
                        <td> Acciones </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- <td> @item.Id </td>-->
                            <td> @item.Nombre </td>
                            <td> @item.Descripcion </td>
                            <td> @item.CantidadP </td>
                            <td>
                                <a asp-controller="Ofertas" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-controller="Ofertas" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> No Hay Ofertas</p>
        }

    </div>

    <div class="row">
        <div class="col-sm-6">
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="CrearPdf" asp-controller="Ofertas">Generar PDF</a>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Ofertas">Agregar nueva oferta</a>
        </div>
    </div>


</body>
